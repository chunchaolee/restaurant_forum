<% if current_user == user %>
  <%= link_to "Friend", friendships_path(friend_id: user), method: :post, class: "btn btn-info disabled" %>
<% elsif current_user.friend?(user) %>
  <%= link_to "unfriend", friendship_path(user), method: :delete, class: "btn btn-danger" %>
<% else %>
  <%= link_to "Friend", friendships_path(friend_id: user), method: :post, class: "btn btn-info" %>
<% end %>