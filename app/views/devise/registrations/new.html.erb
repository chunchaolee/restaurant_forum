<div class="container">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages!%>
    
    <div class="field form-group">
      <%= f.label :email, "Email Address"%>
      <%= f.email_field :email, autofocus: true ,placeholder: "Enter email", class: "form-control"%>
    </div>

    <!-- 加上自訂欄位name到Devise的註冊和編輯頁面 -->
    <div class="field form-group">
      <%= f.label :name, "Username" %>
      <%= f.text_field :name ,placeholder: "Enter username", class: "form-control" %>
    </div>
    
    <div class="field form-group">
      <%= f.label :password, "Password" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off" ,placeholder: "Enter password", class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :password_confirmation , "Password Confirmation" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Enter password again", class: "form-control" %>
    </div>
    
    <!-- 新增intro & avatar欄位 -->
    <div class="field form-group">
      <%= f.label :intro , "自我介紹"%><br />
      <%= f.text_area :intro,placeholder: "Enter Intro", class: "form-control", rows: "8" %>
    </div>

    <div class="field form-group">
      <%= f.label :avatar, "Photo" %>
      <%= image_tag @user.avatar, width: '500px' if @user.avatar? %>
      <%= f.file_field :avatar %>
    </div>

    <br>
    <div class="actions container text-center">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <br>
  <div class="container text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>