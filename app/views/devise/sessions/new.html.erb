<div class="container">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field form-group">
      <%= f.label :email, "Email" %>
      <%= f.email_field :email, autofocus: true, placeholder: "Enter email", class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :password, "Password" %>
      <%= f.password_field :password, autocomplete: "off",placeholder: "Enter password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions container text-center">
      <%= f.submit "Log in" %>
    </div>
  <% end %>
  
  <br>
  <div class="container text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
