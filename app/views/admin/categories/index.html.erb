<div class="container">
  <h3 class="well">餐廳後台: Category 總表 ｜ 權限等級: Admin</h1>
  <%= link_to "Resturant 管理", admin_restaurants_path %>

  <!-- Create category -->
  <br \>
    <div class="form-inline">
      <%= form_for [:admin, @category] do |f| %>
        <div class="form-group">
          <%= f.text_field :name, placeholder: "Category Name", class: "form-control" %>          
        </div>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </div>

    <!-- ERROR MSG -->


  <br \>
  
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-condensed">
        <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>SHOW</th>
            <th>EDIT</th>
            <th>DESTROY</th>
          </tr>  
        </thead>

        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.id %></td>
              <td><%= category.name %></td>
              <td><%= link_to "<span class='glyphicon glyphicon-open-file'></span>  SHOW".html_safe, admin_category_path(category), class: "btn btn-info" %></td>
            <td><%= link_to "<span class='glyphicon glyphicon-edit'></span>  EDIT".html_safe, edit_admin_category_path(category), class: "btn btn-default" %></td>
            <td><%= link_to "<span class='glyphicon glyphicon-remove-sign'></sapn>  DESTROY".html_safe, admin_category_path(category), class: "btn btn-danger", method: :delete, data:{confirm: "WARNING: ARE YOU SURE?"} %></td>
            </tr>
          <% end %>
        </tbody>

      </table>
    </div>
  </div>
</div>