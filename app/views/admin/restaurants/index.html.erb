<h1>餐廳後台 ｜ 權限等級: Admin</h1>
<div class="container">
  <table class="table table-striped table-condensed"
    <% @restaurants.each do |restaurant| %>
     <tr>
        <!-- table colunm呈現 -->
        <td><%= restaurant.name %></td>
        <td><%= restaurant.tel %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.opening_hours %></td>
        <td><%= restaurant.description %></td>
        <!-- 功能區 -->
        <td><%= link_to "<span class='glyphicon glyphicon-open-file'></span>  SHOW".html_safe, admin_restaurant_path(restaurant), class: "btn btn-info" %></td>
        <td><%= link_to "<span class='glyphicon glyphicon-edit'></span>  EDIT".html_safe, edit_admin_restaurant_path(restaurant), class: "btn btn-default" %></td>
        <td><%= link_to "<span class='glyphicon glyphicon-remove-sign'></sapn>  DESTROY".html_safe, admin_restaurant_path(restaurant), class: "btn btn-danger", method: :delete, data:{confirm: "WARNING: ARE YOU SURE?"} %></td>
      </tr>
      <% end %>
    </table>

    <%= link_to "<span class='glyphicon glyphicon-plus'></span>  New Restaurant".html_safe, new_admin_restaurant_path, class: "btn btn-primary" %>

  </div>