<div class="container">
  <h3 class="well">餐廳列表</h1>
  <table class="table table-striped table-condensed">
    <tr>
      <th>Name</th> 
      <th>Tel</th>
      <th>Address</th>
      <th>Opening Hours</th>
      <th>Description</th>
      <th>Show</th>
    </tr>

    <% @restaurants.each do |restaurant| %>
     <tr>
        <!-- table colunm呈現 -->
        <td><%= restaurant.name %></td>
        <td><%= restaurant.tel %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.opening_hours %></td>
        <td><%= restaurant.description %></td>
        <td><%= link_to "<span class='glyphicon glyphicon-open-file'></span>  SHOW".html_safe, admin_restaurant_path(restaurant), class: "btn btn-info" %></td>
      </tr>
      <% end %>
    </table>
    <br \>
    <%= paginate @restaurants %>
  </div>