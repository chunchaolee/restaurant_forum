<div class="container-fluid">
  <div class="row">
    <div class="col-md-12 col-sm-6">
      <table class="table table-striped table-condensed">
        
        <tr><th>Category</th><td><%= @restaurant.category.name %></td></tr>
        <tr><th>Name</th><td><%= @restaurant.name %></td></tr>
        <tr><th>Tel</th><td><%= @restaurant.tel %></td></tr>
        <tr><th>Address</th><td><%= @restaurant.address %></td></tr>
        <tr><th>Opening_hours</th><td><%= @restaurant.opening_hours %></td></tr>
        <tr><th>Description</th><td><%= @restaurant.description %></td></tr>
        <tr><th>Photo</th><td><%= image_tag @restaurant.image, width: '600px' %></td></tr>

      </table>
    </div>
  </div>
</div>

<div class="container text-center">
  <%= link_to "HOME", restaurants_path %>  
  <% if current_user.admin? %>
      |  <%= link_to "<span class='glyphicon glyphicon-edit'></span>  EDIT".html_safe, edit_admin_restaurant_path(@restaurant), class: "btn btn-default" %>
  <% end %>
</div>