<!-- users index -->
<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <!-- page header -->
      <div class="page-header">
        <h1>好友頁面</h1>
      </div>
    </div>


    <!-- all_friends -->
    <% @user.all_friends.each do |user| %>
      <div class="col-md-3 col-sm-4 col-xs-6 text-center user-item">
      
        <%= link_to user_path(user) do %>
          <%= image_tag(user.avatar, class: "img-rounded", width: "128px", height: "128px") %>
          <h4><%= user.name %></h4>
        <% end %>
        <!-- following? -->
        <%= render partial: "shared/follow", locals: {user: user} %>  |

        <!-- friend -->
        <%= render partial: "shared/friend", locals: {user: user} %>

      </div>
    <% end %>
    
    
  </div>
  
</div>

<div class="container text-center">
  <br>
  <br>
  <%= link_to "回到上一頁", :back, class: "btn btn-default" %>  |
  <%= link_to "回到美食達人", users_path, class: "btn btn-default" %> 
  <br>
  <br>
</div>